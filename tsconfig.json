{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": ".",
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "noEmit": false
  },
  "include": ["cli/**/*", "utils/**/*"],
  "exclude": ["components", "dist", "src", "node_modules"]
}
